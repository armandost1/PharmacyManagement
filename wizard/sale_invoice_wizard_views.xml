<odoo>
    <data>

        <record id="view_sale_invoice_wizard" model="ir.ui.view">
            <field name="name">sale.invoice.wizard.form</field>
            <field name="model">sale.invoice.wizard</field>
            <field name="arch" type="xml">
                <form string="Sale Invoice Report Wizard">
                    <group>
                        <field name="medicine_ids" widget="many2many_tags"/>
                        <field name="start_date" required="1"/>
                        <field name="end_date" required="1"/>
                    </group>
                    <footer>
                        <button string="Print Report" type="object" name="print_report" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_sale_invoice_wizard" model="ir.actions.act_window">
            <field name="name">Invoice Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.invoice.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_sale_invoice_wizard"/>
            <field name="target">new</field>
        </record>


        <menuitem id="reports_root" name="Reports" parent="pharmacy_root_menu" sequence="50"/>
        <menuitem id="menu_sale_invoice_report" name="Generate Sale Invoice Report"
                  parent="reports_root" action="action_sale_invoice_wizard" sequence="10"/>

    </data>
</odoo>

