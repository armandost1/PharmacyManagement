<odoo>
    <data>

        <record id="action_report_invoice" model="ir.actions.report">
            <field name="name">Pharmacy Sale Invoice Report</field>
            <field name="model">pharmacy.sale.invoice</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">pharmacy_management.report_invoice</field>
            <field name="report_file">reporti</field>
        </record>

        <template id="report_invoice">
        <t t-set="data_report_landscape" t-value="True"/>
        <t t-set="full_width" t-value="True"/>
        <t t-call="web.html_container">
            <div class="page">
                <table class="table table-condensed table-bordered">
                    <thead>
                        <tr>
                            <th>Medicine</th>
                            <th>Total Quantity Sold</th>
                            <th>Total Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="line">
                            <tr>
                                <td><t t-esc="line['medicine']"/></td>
                                <td><t t-esc="line['qty']"/></td>
                                <td><t t-esc="line['total']"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
        </template>
    </data>
</odoo>