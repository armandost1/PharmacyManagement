<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="pharmacy_invoice_form_view" model="ir.ui.view">
            <field name="name">pharmacy.invoice.form</field>
            <field name="model">pharmacy.invoice</field>
            <field name="arch" type="xml">
                <form string="Invoice">
                    <header>
                        <button name="action_draft" type="object" string="Draft" class="btn-primary"
                                invisible="state != 'draft'"/>
                        <button name="action_pay" type="object" string="Pay" class="btn-success"
                                invisible="payment_status == 'paid'"/>
                        <button name="action_cancel" type="object" string="Cancel" class="btn-secondary"
                                invisible="payment_status == 'cancelled'"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="code"/>
                            <h1>
                                <field name="code" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="invoice_date"/>
                            </group>
                            <group>
                                <field name="payment_status"/>
                                <field name="state" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="invoice_lines" string="Invoice Lines">
                                <field name="invoice_line_ids">
                                    <tree editable="bottom">
                                        <field name="medicine_id"/>
                                        <field name="quantity"/>
                                        <field name="price_unit"/>
                                        <field name="subtotal"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="medicine_id"/>
                                            </group>
                                            <group>
                                                <field name="quantity"/>
                                                <field name="price_unit" />
                                                <field name="subtotal" />
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>

                            <page name="additional_info" string="Additional Info">
                                <group>
                                    <field name="amount_total"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="pharmacy_invoice_tree_view" model="ir.ui.view">
            <field name="name">pharmacy.invoice.tree</field>
            <field name="model">pharmacy.invoice</field>
            <field name="arch" type="xml">
                <tree string="Invoice">
                    <field name="employee_id"/>
                    <field name="invoice_date"/>
                    <field name="amount_total"/>
                    <field name="payment_status"/>
                </tree>
            </field>
        </record>
        <record id="pharmacy_invoice_kanban_view" model="ir.ui.view">
            <field name="name">pharmacy.invoice.kanban</field>
            <field name="model">pharmacy.invoice</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="amount_total" widget='monetary'/>
                    <field name="payment_status"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <strong>
                                    <field name="code"/>
                                </strong>
                                <div>
                                    <field name="amount_total" widget='monetary'/>
                                    <span><field name="payment_status"/></span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="pharmacy_invoice_act_window" model="ir.actions.act_window">
            <field name="name">Invoices</field>
            <field name="res_model">pharmacy.invoice</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <menuitem name="Invoices" id="pharmacy_invoice_menu" parent="pharmacy_root_menu" action="pharmacy_invoice_act_window"/>

    </data>
</odoo>